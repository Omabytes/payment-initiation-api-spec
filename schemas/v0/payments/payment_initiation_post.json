{
  "id": "payment_initiation.json#",
  "title": "Payment Initiation Request",
  "type": "object",
  "properties": {
    "Amount": {
      "$ref": "http://localhost:8000/schemas/v0/definitions/common/amount.json"
    },
    "Currency": {
      "default": "GBP",
      "$ref": "http://localhost:8000/schemas/v0/definitions/common/active_or_historic_currency_code.json#"
    },
    "MerchantName": {
      "type": "string"
    },
    "TransactionDescription": {
      "type": "string"
    },
    "BeneficiaryAccountDetails": {
      "$ref": "http://localhost:8000/schemas/v0/definitions/payments/bank_account_details.json#"
    },
    "EndToEndTransactionID": {
      "description": "Unique and unambiguous identification of the transaction generated by the Initiator",
      "$ref": "http://localhost:8000/schemas/v0/definitions/common/uuid.json#"
    },
    "InstructionID": {
      "description": "TPP instruction ID",
      "type": "string"
    },
    "ReferenceInformation": {
      "type": "string",
      "pattern": "[A-Za-z0-9]{1,18}"
    },
    "BeneficiaryPostalAddress": {
      "$ref": "http://localhost:8000/schemas/v0/definitions/common/postal_address.json#"
    },
    "PaymentType": {
      "$ref": "http://localhost:8000/schemas/v0/definitions/payments/payment_type.json#"
    },
    "ExecutionDate": {
      "description": "Validate between execution date and payment type to confirm scheme accessibility - if payment type is missing, default payment type = FPS.",
      "$ref": "http://localhost:8000/schemas/v0/definitions/common/date.json#"
    },
    "DebitAccountDetails": {
      "description": "Debit Account Details",
      "$ref": "http://localhost:8000/schemas/v0/definitions/payments/bank_account_details.json"
    }
  },
  "required": [
    "Amount",
    "Currency",
    "MerchantName",
    "TransactionDescription",
    "BeneficiaryAccountDetails",
    "PaymentDescription"
  ],
  "additionalProperties": false
}
