{
  "name": "rw-api-spec",
  "version": "0.0.1",
  "description": "Tools to compile and flatten JSON schemas, and generate Swagger Docs",
  "main": "index.js",
  "scripts": {
    "flatten-schemas": "cd build && ./flatten-schemas.sh v0",
    "compile-swagger": "cd build && node compile-swagger.js",
    "build:swagger": "npm run flatten-schemas && npm run compile-swagger",
    "build": "npm run build:swagger && npm run build:spectacle",
    "build:spectacle": "spectacle ./dist/rw-swagger.json -t ./dist/public",
    "build:wsd": "node build/generate-wsd.js",
    "swagger2markdown": "java -jar swagger2markup-cli-1.3.1.jar convert -i dist/rw-swagger.yaml -f dist/rw-swagger -c build/swagger2markup/config.properties",
    "swagger2html": "npm run swagger2asciidoc && npm run asciidoc2html",
    "swagger2asciidoc": "java -jar swagger2markup-cli-1.3.1.jar convert -i dist/rw-swagger.yaml -d ./asciidoc -c build/swagger2markup/config.properties",
    "asciidoc2html": "asciidoctor asciidoc/index.adoc -a toc=left -a toclevels=4 -a numbered='' -o dist/rw-swagger.html",
    "watch:swagger": "spectacle -d ./dist/rw-swagger.json -t ./dist/public",
    "open-localhost": "node -e 'require(\"open\")(\"http://localhost:8080\")'",
    "serve": "npm run open-localhost && spectacle -s ./dist/rw-swagger.json -t ./dist/public -p 8080 ",
    "test": "mocha test",
    "start": "npm run build && npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenBankingUK/rw-api-spec.git"
  },
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/OpenBankingUK/rw-api-spec-build/issues"
  },
  "homepage": "https://github.com/OpenBankingUK/rw-api-spec-build#readme",
  "dependencies": {},
  "devDependencies": {
    "mkdirp": "*",
    "ajv": "^4.10.0",
    "ajv-cli": "1.1.1",
    "chai": "^3.5.0",
    "js-beautify": "*",
    "js-yaml": "3.7.0",
    "json-schema-ref-parser": "3.1.2",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.12.1",
    "supertest": "^2.0.1",
    "glob": "^7.1.1",
    "json2yaml": "*",
    "swagger-parser": "beta",
    "spectacle-docs": "*",
    "websequencediagrams": "git://github.com/Onegini/node-websequencediagrams",
    "open": "*"
  }
}
